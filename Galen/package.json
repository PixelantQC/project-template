{
  "name": "layout",
  "version": "1.0.0",
  "scripts": {
    "all": "galen test configuration.test --htmlreport reports",
    "default": "galen test configuration.test --htmlreport reports --groups default",
    "bs-all-desktop": "galen test browserstack-configuration.test --htmlreport browserstack_reports --groups home-desktop --parallel-tests 2",
    "bs-all-tablet": "galen test browserstack-configuration.test --htmlreport browserstack_reports --groups home-tablet --parallel-tests 2",
    "bs-all-mobile": "galen test browserstack-configuration.test --htmlreport browserstack_reports --groups home-mobile --parallel-tests 2",
    "sl-all-desktop": "galen test saucelabs-configuration.test --htmlreport browserstack_reports --groups home-desktop --parallel-tests 8",
    "sl-all-tablet": "galen test saucelabs-configuration.test --htmlreport browserstack_reports --groups home-tablet --parallel-tests 8",
    "sl-all-mobile": "galen test saucelabs-configuration.test --htmlreport browserstack_reports --groups home-mobile --parallel-tests 8",
    "report": "test -d ~/Dropbox/AutomatedTests/Project/$(date +%Y-%m-%d)/Layout || mkdir -p ~/Dropbox/AutomatedTests/Project/$(date +%Y-%m-%d)/Layout && cp -R reports ~/Dropbox/AutomatedTests/Project/$(date +%Y-%m-%d)/Layout",
    "bs-report": "test -d ~/Dropbox/AutomatedTests/Project/$(date +%Y-%m-%d)/Layout || mkdir -p ~/Dropbox/AutomatedTests/Project/$(date +%Y-%m-%d)/Layout && cp -R browserstack_reports ~/Dropbox/AutomatedTests/Project/$(date +%Y-%m-%d)/Layout"
  },
